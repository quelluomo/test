<div id="form-signup">
  <h1><%= "Sign Up" %></h1>

  <%= form_for @user do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <% if @user.errors[:rname].any? %>
        <%= error_feedback(object: @user, attribute: :name) %>
      <% end %>
    </div>

    <div>
      <%= f.label :email %>
      <%= f.email_field :email %>

      <% if @user.errors[:email].any? %>
        <%= error_feedback(object: @user, attribute: :email) %>
      <% end %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>

      <% if @user.errors[:password].any? %>
        <%= error_feedback(object: @user, attribute: :password) %>
      <% end %>
    </div>

    <div>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

      <% if @user.errors[:password_confirmation].any? %>
        <%= error_feedback(object: @user, attribute: :password_confirmation) %>
      <% end %>
    </div>

    <%= f.submit "Sign Up"%>
  <% end %>

  <div>
    <%= link_to "Sign up with GitHub", '/auth/github' %>
  </div>
</div>
